{
  "version": "0.1.0",
  "manifest_version": 2,
  "name": "Meet Graf√≠k",
  "author": "Lanre Makinde",
  "description": "Firefox and Chrome extensions introspect google meet participants' information.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/js/browser-polyfill.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["lib/js/browser-polyfill.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["http://myapi.com", "storage", "unlimitedStorage"],
  "icons": {
    "128": "img/icon.png"
  },
  "web_accessible_resources": ["sidebar.html"],
  "sidebar_action": {
    "default_icon": "img/icon.png",
    "default_title": "Sidebar",
    "default_panel": "sidebar.html"
  },
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  }
}
